---
export interface Props {
	error: string | null;
}

const { error } = Astro.props;
---

<p class="form_error">{error}</p>
<style>
	.form_error {
		margin: 0;
		padding: 0;
		font-size: 0.8rem;
		font-weight: bold;
		display: block;
		position: absolute;
		top: 25px;
		left: 40px;
		animation: errorAnim 0.2s linear forwards;
		text-overflow: ellipsis;
		white-space: nowrap;
		max-width: calc(100vw - 40px);
		overflow: hidden;
	}

	@keyframes errorAnim {
		0% {
			transform: translateX(-200px);
		}
		100% {
			transform: translateX(0px);
		}
	}
</style>
